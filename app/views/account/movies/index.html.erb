<div class="col-md-12">

  <h2 class="text-center"> 我加入的电影收藏 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Name </th>
        <th> Date </th>
        <th> Film Type </th>
        <th> Film Time </th>
        <th> Director </th>
        <th> Actor </th>
      </tr>
    </thead>

    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td> # </td>
          <td><%= link_to(movie.name, movie_path(movie)) %></td>
          <td><%= movie.date %></td>
          <td><%= movie.film_type %></td>
          <td><%= movie.film_time %></td>
          <td><%= movie.director %></td>
          <td><%= render_movie_actor(movie) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
